<h1>7-Day Forecast for <%= @location.title %></h1>

<p><%= link_to "Back to Locations", locations_path %></p>

<% if @forecast %>
  <ul>
    <% @forecast["time"].each_with_index do |date, index| %>
      <li>
        <strong><%= date %></strong>:
        High: <%= @forecast["temperature_2m_max"][index] %>°F,
        Low: <%= @forecast["temperature_2m_min"][index] %>°F
      </li>
    <% end %>
  </ul>
<% else %>
  <p>Unable to retrieve forecast data.</p>
<% end %>
